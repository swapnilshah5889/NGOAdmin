<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_view_event_layout_main"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="15dp"
    android:paddingTop="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:elevation="5dp"
    android:background="@drawable/event_background">

    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_category_name"
            android:textColor="#343434"
            android:paddingStart="10dp"
            android:textStyle="bold"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="20dp"
            android:lines="1"
            android:maxLines="1"
            android:textSize="20dp"
            android:text="Blood Donation"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>

        <LinearLayout
            android:id="@+id/ll_category_options"
            android:clickable="true"
            android:gravity="center"
            android:layout_weight="9"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_more_options"
                android:layout_width="15dp"
                android:layout_height="20dp"></ImageView>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_height="wrap_content">


        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="140dp">
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <ImageView
                    android:background="#2000"
                    android:src="@drawable/img_ngo"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"></ImageView>

                <TextView
                    android:layout_margin="5dp"
                    android:maxLines="3"
                    android:minLines="3"
                    android:gravity="center_horizontal"
                    android:textColor="#333"
                    android:textSize="14dp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="14dp"
                    android:text="10,000 tree plantation at prahlagnagar, ahmedabad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="140dp">
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <ImageView
                    android:background="#2000"
                    android:src="@drawable/img_ngo"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"></ImageView>

                <TextView
                    android:layout_margin="5dp"
                    android:maxLines="3"
                    android:minLines="3"
                    android:gravity="center_horizontal"
                    android:textColor="#333"
                    android:textSize="14dp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="14dp"
                    android:text="10,000 tree plantation at prahlagnagar, ahmedabad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_weight="4"

            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="140dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/view_all_events"
                android:layout_height="80dp">

                <LinearLayout
                    android:clickable="true"
                    android:id="@+id/ll_view_all_events"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="View"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="All"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Events"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>

                </LinearLayout>



            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>